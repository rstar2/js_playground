{
    "name": "Demo Extension BrowserAction",
    "description": "Demo Extension BrowserAction Description",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "declarativeContent"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/popup.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens popup.html"
        }
    }
}