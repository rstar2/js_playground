{
    "name": "Demo Extension PageActon",
    "description": "Demo Extension PageActon Description",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/popup16.png",
            "32": "images/popup32.png",
            "48": "images/popup48.png",
            "128": "images/popup128.png"
        }
    },
    "icons": {
        "16": "images/popup16.png",
        "32": "images/popup32.png",
        "48": "images/popup48.png",
        "128": "images/popup128.png"
    }
}